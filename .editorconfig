# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All
[*]
indent_size = 2
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

# Makefile
[Makefile]
indent_style = tab

# Golang
[*.go]
charset = utf-8
indent_size = 4
indent_style = tab
